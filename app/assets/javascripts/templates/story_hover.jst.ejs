<div class="small">
  <span class="icons">
    <span class="icon icons-<%= story.get('story_type') %>"></span>
    <span class="text"><%= I18n.t('story_type.' + story.get('story_type')) %></span>
    <% if (story.get('estimated')) { %>
      <span class="estimate estimate_<%= story.get('estimate') %>"><%= story.get('estimate') %></span>
      <span class="text"><%= story.get('estimate') %> points</span>
    <% } %>
  </span>
  <span><%= I18n.t('words.requested') %>
    <% if (story.requested_by()) { %>
      <%= I18n.t('words.by') %> <%= story.requested_by().get("name") %>
    <% } %>
    <%= I18n.t('words._on') %> <%= story.created_at() %>
    </span>
</div>
<% if (story.get('description')) { %>
  <h4 class="title"><%= I18n.t('fields.description') %></h4>
  <div class="description"><%= story.escape('description') %></div>
<% } %>
<% if (story.hasNotes()) { %>
  <h5 class="title"><%= I18n.t('fields.notes') %></h5>
  <% _.each(story.notes.saved(), function(note) { %>
    <div class="note"><%= JST['templates/note']({note:note}) %></div>
  <% }); %>
<% } %>
